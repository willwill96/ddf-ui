<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <reference id="catalogFramework" interface="ddf.catalog.CatalogFramework"/>

    <reference id="filterBuilder" interface="ddf.catalog.filter.FilterBuilder"/>

    <reference id="attributeRegistry" interface="ddf.catalog.data.AttributeRegistry"/>

    <bean id="queryTemplateMigration" class="org.codice.ddf.search.query.template.migration.QueryTemplateMigration">
        <argument ref="catalogFramework"/>
        <argument ref="filterBuilder"/>
        <argument ref="attributeRegistry"/>
    </bean>

    <service ref="queryTemplateMigration" interface="ddf.catalog.migrate.migration.api.DataMigratable">
        <service-properties>
            <entry key="id" value="query-template"/>
            <entry key="name" value="Query Template"/>
            <entry key="description" value="This data migration task must be run if you are upgrading an existing system from any version older than 2.22.0. "/>
        </service-properties>
    </service>

</blueprint>